{% if ansible_distribution == 'Ubuntu' %}
  [ OS : Ubuntu ] 
  >> dpkg -l | grep nginx OR >> systemctl nginx status
{% elif ansible_distribution == 'CentOS' and ansible_distribution_major_version == '7' %}
  [ OS : CentOS ver7 ] 
  >> yum list installed | grep nginx OR >> systemctl nginx status
{% elif ansible_distribution == 'CentOS' and ansible_distribution_major_version == '6' %}
  [ OS : CentOS ver6 ] 
  >> yum list installed | grep nginx OR >> systemctl nginx statu
{% else %}
  >> systemctl nginx statu (* Generally)
{% endif %}
